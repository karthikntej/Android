<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    >

    <TextView
        android:id="@+id/audioSample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#BBC0C8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Audio Sample" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audioSample"
        android:id="@+id/recordList"
        >

    </ListView>

    <Button
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="319dp"
        android:text="Record"
        android:textStyle="bold" />



    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/record"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@+id/record"
        android:textStyle="bold"
        android:text="STOP" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/record"
        android:layout_toRightOf="@+id/stop"
        android:textStyle="bold"
        android:text="Play" />

    <Button
        android:id="@+id/stopPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/record"
        android:layout_toRightOf="@+id/play"
        android:textStyle="bold"
        android:text="STOP PLAYING" />

    <TextView
        android:id="@+id/testExecution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopPlaying"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="#BBC0C8"
        android:textSize="20dp"
        android:text="Test execution" />



    <ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/responseList"
    android:layout_below="@+id/testExecution"
        >

</ListView>




</RelativeLayout>